{% block contenido %}
	<h1>Add Patient</h1>

	<form action="/patients" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
		{# <div class="form-group">
			<label for="login">Login:</label>
			{% if errors.login %}
				<p class="text-danger">{{ errors.login }}</p>
			{% endif %}
			<input type="text" class="form-control" id="login" name="login" value="{{ patient.login }}" required>
		</div> #}

		{# <div class="form-group">
			<label for="password">Password:</label>
			{% if errors.password %}
				<p class="text-danger">{{ errors.password }}</p>
			{% endif %}
			<input type="password" class="form-control" id="password" name="password" required>
		</div> #}

		<div class="form-group">
			<label for="name">Name:</label>

			<input type="text" class="form-control" id="name" name="name" value="{{ patient.name }}" required>
			{% if errors.name %}
				<p class="text-danger">{{ errors.name }}</p>
			{% endif %}
		</div>

		<div class="form-group">
			<label for="surname">Surname:</label>

			<input type="text" class="form-control" id="surname" name="surname" value="{{ patient.surname }}" required>
			{% if errors.surname %}
				<p class="text-danger">{{ errors.surname }}</p>
			{% endif %}
		</div>
		<br>
		<div class="form-group">
			<label for="birthDate">Birth Date:</label>

			<input type="date" class="form-control" id="birthDate" name="birthDate" value="{{ patient.birthDate }}" required>
			{% if errors.birthDate %}
				<p class="text-danger">{{ errors.birthDate }}</p>
			{% endif %}
		</div>
		<br>
		<div class="form-group">
			<label for="address">Address:</label>

			<input type="text" class="form-control" id="address" name="address" value="{{ patient.address }}" required>
			{% if errors.address %}
				<p class="text-danger">{{ errors.address }}</p>
			{% endif %}
		</div>
		<div class="form-group">
			<label for="insuranceNumber">Insurance Number:</label>

			<input type="text" class="form-control" id="insuranceNumber" name="insuranceNumber" value="{{ patient.insuranceNumber }}" required>
			{% if errors.insuranceNumber %}
				<p class="text-danger">{{ errors.insuranceNumber }}</p>
			{% endif %}
		</div>
		<br>
		<div class="form-group">
			<label for="image">Image:</label>
			<input type="file" class="form-control" id="image" name="image">
		</div>
		<br>
		<button type="submit" class="btn btn-primary">Save Changes</button>
		<a href="/patients/{{ patient._id }}" class="btn btn-secondary">Cancel</a>
	</form>
{% endblock %}